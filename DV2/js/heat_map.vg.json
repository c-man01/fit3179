{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
      "url": "https://media.githubusercontent.com/media/c-man01/fit3179/master/DV2/data/hire-times.csv"
  },
  "title": "When Do Londoners Hire Bicycles?",
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 13
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "Start Date",
          "timeUnit": "hours",
          "type": "ordinal",
          "title": "Time",
          "axis": {
              "labelAngle": 0,
              "format": "%H"
          }
      },
      "y": {
          "field": "Start Date",
          "timeUnit": "day",
          "type": "ordinal",
          "title": "Day of Week",
          "axis":{
            "format": "%a"
          }
      },
      "color": {
          "field": "dummy",
          "aggregate": "sum",
          "type": "quantitative",
          }
      }
  }
}