{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
      "url": "https://raw.githubusercontent.com/c-man01/fit3179/master/DV2/data/hire-times-hourly.csv"
  },
  "width":850,
  "height":200,
  "title": "When Do Londoners Cycle?",
  "mark": {"type": "rect", "tooltip":true},
  "transform": [{
    "window": [{
      "op": "sum",
      "field": "dummy",
      "as": "TotalDummy"
    }],
    "frame": [null, null]
  },
  {
    "calculate": "datum.dummy/datum.TotalDummy * 100",
    "as": "PercentOfTotal"
  }],
  "encoding": {
      "x": {
          "field": "Start Date",
          "timeUnit": "hours",
          "type": "ordinal",
          "title": "Hour of Day (24hr time)",
          "axis": {
              "labelAngle": 0,
              "format": "%H"
          }
      },
      "y": {
          "field": "Start Date",
          "timeUnit": "day",
          "type": "ordinal",
          "title": "Day of Week",
          "axis":{
            "format": "%a"
          }
      },
      "color": {
          "field": "PercentOfTotal",
          "aggregate": "sum",
          "type": "quantitative",
          "title": "% of Weekly Hires",
          "scale":{"scheme": "lighttealblue"}
          }
      }
  }
