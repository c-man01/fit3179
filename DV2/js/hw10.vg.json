{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/c-man01/fit3179/master/hw10/data/mth-hires.csv"},
  "vconcat": [
    {
      "width": 300,
      "height": 200,
      "title": "London Bicyle Hire 2019",
      "layer": [
        {
          "mark": {"type":"rect", "fill": "yellow", "opacity":0.5},
          "data": {
            "values": {
              "start": "2019-06-01",
              "end": "2019-09-01",
              "event": "Summer",
              "type": "ordinal"}
            },
          "encoding":{
            "x": {
              "field": "start",
              "timeUnit": "month",
              "type": "ordinal",
              "axis": {"format": "%b"}
            },
            "x2": {
              "field": "end",
              "timeUnit": "month",
              "type": "ordinal",
              "axis": {"format": "%b"}
            }
          }
        },
        {
          "mark": {"type":"rect", "fill": "yellow", "opacity":0.5},
          "data": {
            "values": {
              "start": "2019-06-01",
              "end": "2019-08-01",
              "event": "Summer",
              "type": "ordinal"}
            },
          "encoding":{
            "x2": {
              "field": "start",
              "timeUnit": "month",
              "type": "ordinal",
              "axis": {"format": "%b"}
            },
            "x": {
              "field": "end",
              "timeUnit": "month",
              "type": "ordinal",
              "axis": {"format": "%b"}
            }
          }
        },
        {
          "mark": {"type": "area", "tooltip":true},
          "params": [{"name": "Bor-select", "select": {"type": "point", "fields": ["Borough"]}, "bind": "legend"}],
          "encoding": {
            "x": {
              "timeUnit": "month",
              "field": "date",
              "type": "ordinal",
              "title": "Month",
              "axis": {"format": "%b"}
            },
            "y": {
              "field": "hire-cnt",
              "type": "quantitative",
              "title": "Monthly Hire Totals",
              "scale": {"domain":[0,1170000]}
            },
            "color": {"field": "Borough", "scale": {"scheme": "category20c"}},
            "opacity": {"condition": {"param": "Bor-select", "value": 1}, "value": 0.2}
          }
        }
      ]
  },{
      "width": 300, 
  "height": 100,
  "data": {"url": "https://raw.githubusercontent.com/c-man01/fit3179/master/hw10/data/mth-weather.csv"},
  "encoding": {
    "x": {
      "timeUnit": "month", 
      "field": "date",
      "type": "ordinal",
      "title": "Month"
    }
    },
  "layer": [
    {
      "mark": {"type":"rect", "fill": "yellow", "opacity":0.5},
      "data": {
        "values": {
          "start": "2019-06-01",
          "end": "2019-09-01",
          "event": "Summer",
          "type": "ordinal"}
        },
      "encoding":{
        "x": {
          "field": "start",
          "timeUnit": "month",
          "type": "ordinal",
          "axis": {"format": "%b"}
        },
        "x2": {
          "field": "end",
          "timeUnit": "month",
          "type": "ordinal",
          "axis": {"format": "%b"}
        }
      }
    },
    {
      "mark": {"type":"rect", "fill": "yellow", "opacity":0.5},
      "data": {
        "values": {
          "start": "2019-06-01",
          "end": "2019-08-01",
          "event": "Summer",
          "type": "ordinal"}
        },
      "encoding":{
        "x2": {
          "field": "start",
          "timeUnit": "month",
          "type": "ordinal",
          "axis": {"format": "%b"}
        },
        "x": {
          "field": "end",
          "timeUnit": "month",
          "type": "ordinal",
          "axis": {"format": "%b"}
        }
      }
    },
    {
      "mark": {"fill": "#1F78B4", "stroke": "white", "opacity": 1, "type": "bar", "tooltip": true},
      "encoding": {
        "y": {
          "field": "rain_ave_mm",
          "type": "quantitative",
          "scale": {"domain": [0, 80]},
          "title": "Rainfall (mm)",
          "axis": {"titleColor":"#1F78B4", "titleOpacity":0.7}
        },
        "tooltip": [
          {"field": "date", "type": "ordinal", "timeUnit": "month", "title": "Month"},
          {"field": "rain_ave_mm", "type": "quantitative", "title": "Cummulative Rainfall (mm)"},
          {"field": "t_ave", "type": "quantitative", "title": "Ave. Temperature (°C)"}]
      }
    },
        {
      "mark": {"stroke": "#E31A1C", "type": "line", "strokeWidth":4},
      "encoding": {
        "y": {
          "field": "t_ave",
          "type": "quantitative",
          "scale": {"domain": [0, 40]},
          "title": "Avg. Temperature (°C)",
          "axis": {"titleColor": "#E31A1C", "titleOpacity":0.8}
        }
      }
    },
    {
      "data": { 
        "values": [{"date": "2019-07-01"}]
      },
      "mark": {
        "type": "text",
        "align": "center",
        "dy": -40      },
      "encoding": {
        "text": {"value": "Summer"},
        "color": {"value": "black"}
      }

    }

  ],
  "resolve": {"scale": {"y": "independent"}}
  }
  ]
}