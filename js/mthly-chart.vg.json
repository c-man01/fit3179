{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/c-man01/fit3179/master/data/mth-hires.csv"},
  "vconcat": [
    {
      "width": 600,
      "height": 400,
      "title": "London Bicyle Hire 2019",
      "mark": "area",
      "params": [{
        "name": "Bor-select",
        "select": {"type": "point", "fields": ["Borough"]
    },
        "bind": "legend"
      }],
      "encoding": {
        "x": {
          "timeUnit": "month",
          "field": "date",
          "type": "ordinal",
          "title": "Month",
          "axis": {"format": "%b"}
        },
        "y": {
          "field": "hire-cnt",
          "type": "quantitative",
          "title": "Monthly Hire Totals"
        },
        "color": {"field": "Borough", "scale": {"scheme": "category20c"}},
        "opacity": {
          "condition": {"param": "Bor-select", "value": 1},
          "value": 0.2
        }  
    }
  },{
      "width": 600, 
  "height": 150,
  "data": {"url": "https://raw.githubusercontent.com/c-man01/fit3179/master/data/mth-weather.csv"},
  "encoding": {
    "x": {
      "timeUnit": "month", 
      "field": "date",
      "type": "ordinal",
      "title": "Month"
    }
    },
  "layer": [
    {
      "mark": {"fill": "#1F78B4", "stroke": "white", "opacity": 0.5, "type": "bar"},
      "encoding": {
        "y": {
          "field": "rain_ave_mm",
          "type": "quantitative",
          "scale": {"domain": [0, 70]},
          "title": "Rainfall (mm)",
          "axis": {"titleColor":"#1F78B4", "titleOpacity":0.7}
        }
      }
    },
        {
      "mark": {"stroke": "#E31A1C", "type": "line"},
      "encoding": {
        "y": {
          "field": "t_ave",
          "type": "quantitative",
          "scale": {"domain": [0, 70]},
          "title": "Avg. Temperature (Â°C)",
          "axis": {"titleColor": "#E31A1C", "titleOpacity":0.8}
        }
      }
    }

  ],
  "resolve": {"scale": {"y": "independent"}}
  }
  ]
}