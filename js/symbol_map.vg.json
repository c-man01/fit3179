{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 560,
  "title": "Bike Hire in London",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "./js/london-topojson.topojson",
        "format": {"type": "topojson", "feature": "london_geo"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "/Project 2/data/cycle-ds-clean.csv"
      },
        "transform": [{
          "aggregate": [{
            "op": "count",
            "as": "Hire Count"
          }],
          "groupby": ["StartStation Name"]
        }],

      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "StartStation Lng", "type": "quantitative"},
        "latitude": {"field": "StartStation Lat", "type": "quantitative"},
        "size": {
          "field": "Hire",
          "type": "quantitative",
          "scale": {"domain": [4, 10000]}
        }
      }
    }
  ]
}