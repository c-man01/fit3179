{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 560,
  "title": "Bike Hire in London",
  "projection": {"type": "equalEarth"},
  "data": {
        "url": "https://raw.githubusercontent.com/c-man01/fit3179/main/js/london-topojson.topojson",
        "format": {"type": "topojson", "feature": "london_geo"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/c-man01/fit3179/main/data/cycle-stations.csv"},
            "key": "Borough",
            "fields": ["Active"]
          }
          },
        }],
          "groupby": ["StartStation Name"]
        }],

      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "StartStation Lng", "type": "quantitative"},
        "latitude": {"field": "StartStation Lat", "type": "quantitative"},
        "size": {
          "field": "Hire",
          "type": "quantitative",
          "scale": {"domain": [4, 10000]}
        }
      }
    }
  ]
}